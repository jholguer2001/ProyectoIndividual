@model POS.DTOs.CustomerSearchDTO

@if (Model.Results == null || !Model.Results.Any())
{
    <div class="alert alert-info mb-0">
        <i class="fas fa-info-circle"></i>
        @if (string.IsNullOrEmpty(Model.SearchTerm))
        {
            <text>No se encontraron clientes en el sistema</text>
        }
        else
        {
            <text>No se encontraron clientes que coincidan con "@Model.SearchTerm"</text>
        }
    </div>
}
else
{
    <div class="mb-2">
        <small class="text-muted">
            <i class="fas fa-check-circle text-success"></i>
            Se encontraron <strong>@Model.TotalRecords</strong> cliente(s)
            @if (!string.IsNullOrEmpty(Model.SearchTerm))
            {
                <text>que coinciden con "@Model.SearchTerm"</text>
            }
        </small>
    </div>

    <div class="table-responsive" style="max-height: 400px; overflow-y: auto;">
        <table class="table table-hover table-sm mb-0">
            <thead class="table-light sticky-top">
                <tr>
                    <th style="width: 15%;">Cédula</th>
                    <th style="width: 25%;">Nombre Completo</th>
                    <th style="width: 25%;">Email</th>
                    <th style="width: 15%;">Teléfono</th>
                    <th style="width: 20%;">Acción</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model.Results)
                {
                    <tr>
                        <td><small class="text-muted">@customer.IdentificationNumber</small></td>
                        <td><strong>@customer.FullName</strong></td>
                        <td><small>@(customer.Email ?? "N/A")</small></td>
                        <td><small>@(customer.Phone ?? "N/A")</small></td>
                        <td>
                            <button type="button" class="btn btn-sm btn-primary w-100"
                                    onclick="selectCustomer(
                    @customer.CustomerId,
                    '@customer.FullName',
                    '@customer.IdentificationNumber',
                    '@(customer.Email ?? "")',
                    '@(customer.Phone ?? "")',
                    '@(customer.Address ?? "")')">
                                <i class="fas fa-check"></i> Seleccionar
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @* Pagination *@
    @if (Model.TotalRecords > Model.PageSize)
    {
        var totalPages = (int)Math.Ceiling((double)Model.TotalRecords / Model.PageSize);

        <nav aria-label="Paginación de clientes" class="mt-3">
            <ul class="pagination pagination-sm justify-content-center customer-pagination mb-0">
                @* Previous button *@
                <li class="page-item @(Model.PageNumber <= 1 ? "disabled" : "")">
                    <a class="page-link" href="#" data-page="@(Model.PageNumber - 1)">
                        <i class="fas fa-chevron-left"></i>
                    </a>
                </li>

                @* Page numbers (show max 5 pages) *@
                @{
                    int startPage = Math.Max(1, Model.PageNumber - 2);
                    int endPage = Math.Min(totalPages, startPage + 4);
                    if (endPage - startPage < 4)
                    {
                        startPage = Math.Max(1, endPage - 4);
                    }
                }

                @for (int i = startPage; i <= endPage; i++)
                {
                    <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                        <a class="page-link" href="#" data-page="@i">@i</a>
                    </li>
                }

                @* Next button *@
                <li class="page-item @(Model.PageNumber >= totalPages ? "disabled" : "")">
                    <a class="page-link" href="#" data-page="@(Model.PageNumber + 1)">
                        <i class="fas fa-chevron-right"></i>
                    </a>
                </li>
            </ul>
        </nav>

        <div class="text-center mt-2">
            <small class="text-muted">
                Página @Model.PageNumber de @totalPages
            </small>
        </div>
    }
}