@model POS.DTOs.ProductSearchDTO

@if (Model.Results == null || !Model.Results.Any())
{
    <div class="alert alert-info mb-0">
        <i class="fas fa-info-circle"></i>
        @if (string.IsNullOrEmpty(Model.SearchTerm))
        {
            <text>No se encontraron productos en el sistema</text>
        }
        else
        {
            <text>No se encontraron productos que coincidan con "@Model.SearchTerm"</text>
        }
    </div>
}
else
{
    <div class="mb-2">
        <small class="text-muted">
            <i class="fas fa-check-circle text-success"></i>
            Se encontraron <strong>@Model.TotalRecords</strong> producto(s)
            @if (!string.IsNullOrEmpty(Model.SearchTerm))
            {
                <text>que coinciden con "@Model.SearchTerm"</text>
            }
        </small>
    </div>

    <div style="max-height: 400px; overflow-y: auto;">
        <table class="table table-hover table-sm mb-0">
            <thead class="table-light sticky-top">
                <tr>
                    <th style="width: 15%;">Código</th>
                    <th style="width: 30%;">Nombre del Producto</th>
                    <th style="width: 15%;">Precio</th>
                    <th style="width: 15%;">Stock</th>
                    <th style="width: 25%;">Acción</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model.Results)
                {
                    // Preparar valores para JavaScript con formato correcto
                    var productCode = System.Web.HttpUtility.JavaScriptStringEncode(product.ProductCode ?? "");
                    var productName = System.Web.HttpUtility.JavaScriptStringEncode(product.ProductName ?? "");
                    // Forzar formato con punto decimal para JavaScript
                    var unitPriceFormatted = product.UnitPrice.ToString("0.00", System.Globalization.CultureInfo.InvariantCulture);
                    var taxableValue = product.Taxable ? "true" : "false";

                    <tr>
                        <td><small class="text-muted">@product.ProductCode</small></td>
                        <td>
                            <strong>@product.ProductName</strong>
                            @if (!string.IsNullOrEmpty(product.Description))
                            {
                                <br />
                                <small class="text-muted">@product.Description</small>
                            }
                        </td>
                        <td><strong class="text-success">$@product.UnitPrice.ToString("N2")</strong></td>
                        <td>
                            <span class="badge bg-success">@product.StockQuantity</span>
                        </td>
                        <td>
                            <button type="button"
                                    class="btn btn-sm btn-success w-100"
                                    onclick="selectProductForOrder(@product.ProductId, '@productCode', '@productName', @unitPriceFormatted, @product.StockQuantity, @taxableValue)">
                                <i class="fas fa-plus"></i> Agregar
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @* Pagination *@
    @if (Model.TotalRecords > Model.PageSize)
    {
        var totalPages = (int)Math.Ceiling((double)Model.TotalRecords / Model.PageSize);

        <nav aria-label="Paginación de productos" class="mt-3">
            <ul class="pagination pagination-sm justify-content-center product-pagination mb-0">
                @* Previous button *@
                <li class="page-item @(Model.PageNumber <= 1 ? "disabled" : "")">
                    <a class="page-link" href="#" data-page="@(Model.PageNumber - 1)">
                        <i class="fas fa-chevron-left"></i>
                    </a>
                </li>

                @* Page numbers (show max 5 pages) *@
                @{
                    int startPage = Math.Max(1, Model.PageNumber - 2);
                    int endPage = Math.Min(totalPages, startPage + 4);
                    if (endPage - startPage < 4)
                    {
                        startPage = Math.Max(1, endPage - 4);
                    }
                }

                @for (int i = startPage; i <= endPage; i++)
                {
                    <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                        <a class="page-link" href="#" data-page="@i">@i</a>
                    </li>
                }

                @* Next button *@
                <li class="page-item @(Model.PageNumber >= totalPages ? "disabled" : "")">
                    <a class="page-link" href="#" data-page="@(Model.PageNumber + 1)">
                        <i class="fas fa-chevron-right"></i>
                    </a>
                </li>
            </ul>
        </nav>

        <div class="text-center mt-2">
            <small class="text-muted">
                Página @Model.PageNumber de @totalPages
            </small>
        </div>
    }
}