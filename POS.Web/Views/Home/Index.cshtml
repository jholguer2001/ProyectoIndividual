@{
    ViewData["Title"] = "Inicio";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-12 text-center mb-5">
            <h1 class="display-3">
                <i class="fas fa-cash-register text-primary"></i>
                Sistema Punto de Venta
            </h1>
            <p class="lead text-muted">Sistema moderno de gestión de órdenes de venta</p>
        </div>
    </div>

    <div class="row g-4">
        <!-- Create Order Card -->
        <div class="col-md-6">
            <div class="card border-primary shadow-lg h-100 hover-card">
                <div class="card-header bg-primary text-white text-center py-4">
                    <i class="fas fa-shopping-cart fa-3x mb-3"></i>
                    <h3>Crear Nueva Orden</h3>
                </div>
                <div class="card-body d-flex flex-column">
                    <p class="card-text flex-grow-1">
                        Inicie una nueva orden de venta seleccionando un cliente y agregando productos al carrito.
                        El sistema gestiona automáticamente el inventario y calcula los totales.
                    </p>
                    <ul class="list-unstyled mb-4">
                        <li><i class="fas fa-check text-success"></i> Seleccionar cliente</li>
                        <li><i class="fas fa-check text-success"></i> Agregar productos con validación de stock</li>
                        <li><i class="fas fa-check text-success"></i> Cálculo automático de impuestos</li>
                        <li><i class="fas fa-check text-success"></i> Actualización automática de inventario</li>
                    </ul>
                    <a asp-controller="SalesOrder" asp-action="Create" class="btn btn-primary btn-lg w-100">
                        <i class="fas fa-plus-circle"></i> Crear Orden
                    </a>
                </div>
            </div>
        </div>

        <!-- Search Orders Card -->
        <div class="col-md-6">
            <div class="card border-success shadow-lg h-100 hover-card">
                <div class="card-header bg-success text-white text-center py-4">
                    <i class="fas fa-search fa-3x mb-3"></i>
                    <h3>Buscar Órdenes</h3>
                </div>
                <div class="card-body d-flex flex-column">
                    <p class="card-text flex-grow-1">
                        Busque órdenes de venta existentes por número de orden o nombre de cliente.
                        Vea detalles, imprima facturas y gestione su historial de ventas.
                    </p>
                    <ul class="list-unstyled mb-4">
                        <li><i class="fas fa-check text-success"></i> Búsqueda inteligente</li>
                        <li><i class="fas fa-check text-success"></i> Resultados paginados</li>
                        <li><i class="fas fa-check text-success"></i> Ver detalles de orden</li>
                        <li><i class="fas fa-check text-success"></i> Imprimir facturas en PDF</li>
                    </ul>
                    <a asp-controller="SalesOrder" asp-action="Search" class="btn btn-success btn-lg w-100">
                        <i class="fas fa-search"></i> Buscar Órdenes
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Features Section -->
    <div class="row mt-5">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0"><i class="fas fa-star"></i> Características del Sistema</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <div class="d-flex">
                                <div class="flex-shrink-0">
                                    <i class="fas fa-check-circle text-success fa-2x"></i>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h5>Validación de Stock</h5>
                                    <p class="text-muted mb-0">
                                        Verificación de inventario en tiempo real previene sobreventa
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="d-flex">
                                <div class="flex-shrink-0">
                                    <i class="fas fa-calculator text-primary fa-2x"></i>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h5>Cálculos Automáticos</h5>
                                    <p class="text-muted mb-0">
                                        Subtotales, impuestos y totales calculados automáticamente
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="d-flex">
                                <div class="flex-shrink-0">
                                    <i class="fas fa-database text-warning fa-2x"></i>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h5>Seguridad de Transacciones</h5>
                                    <p class="text-muted mb-0">
                                        Las transacciones de base de datos aseguran integridad de datos
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="d-flex">
                                <div class="flex-shrink-0">
                                    <i class="fas fa-file-pdf text-danger fa-2x"></i>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h5>Facturas en PDF</h5>
                                    <p class="text-muted mb-0">
                                        Genere facturas profesionales para impresión
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="d-flex">
                                <div class="flex-shrink-0">
                                    <i class="fas fa-shield-alt text-info fa-2x"></i>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h5>Validación de Datos</h5>
                                    <p class="text-muted mb-0">
                                        Validación integral previene errores de datos
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="d-flex">
                                <div class="flex-shrink-0">
                                    <i class="fas fa-layer-group text-secondary fa-2x"></i>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h5>Arquitectura por Capas</h5>
                                    <p class="text-muted mb-0">
                                        Estructura de código limpia, mantenible y escalable
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .hover-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.2) !important;
        }
</style>